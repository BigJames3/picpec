    "class-validator": "^0.14.3",
    "cloudinary": "^2.9.0",
    "fluent-ffmpeg": "^2.1.3",
    "joi": "^18.0.2",
    "multer": "^2.0.2",
    "sharp": "^0.33.5",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.0",
